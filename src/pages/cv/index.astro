---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { site } from "../../lib/site";
---

<SiteLayout title="CV">
	<section class="container mt-10 sm:mt-14">
		<header class="rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm sm:p-8">
			<div class="flex flex-col gap-6 sm:flex-row sm:items-start sm:justify-between">
				<div>
					<p class="text-sm font-medium tracking-wide text-zinc-700">Curriculum vitae</p>
					<h1 class="mt-2">{site.name}</h1>
					<p class="mt-2 text-sm text-zinc-700">
						{site.affiliation} <span class="text-zinc-300">•</span> {site.location}
					</p>
				</div>

				<div class="flex flex-wrap gap-2">
					<a class="btn-primary" href="/ENCV.pdf">Download PDF</a>
					<a class="btn-secondary" href="/ENCV.pdf" target="_blank" rel="noreferrer">Open PDF</a>
					<a class="btn-secondary" href={`mailto:${site.email}`}>Email</a>
				</div>
			</div>
		</header>

		<div class="mt-8 grid gap-8 lg:grid-cols-[1fr_22rem] lg:items-start">
			<main class="space-y-8">
				<section class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
					<div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
						<div>
							<h2 class="text-2xl">PDF preview</h2>
							<p class="mt-1 text-sm text-zinc-700">
								If the preview doesn’t load, use <a class="no-underline hover:underline" href="/ENCV.pdf">Download PDF</a>.
							</p>
						</div>
						<a class="pill no-underline hover:underline" href="/ENCV.pdf#view=FitH" target="_blank" rel="noreferrer">
							Open in new tab
						</a>
					</div>

					<div class="mt-4 overflow-hidden rounded-xl border border-zinc-200 bg-zinc-50">
						<iframe title="CV PDF" src="/ENCV.pdf#view=FitH" class="h-[75vh] w-full"></iframe>
					</div>
				</section>

				<section class="grid gap-6 lg:grid-cols-2">
					<section class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
						<h2 class="text-2xl">Education</h2>
						<dl class="mt-4 space-y-4 text-sm text-zinc-800">
							<div class="grid gap-1">
								<dt class="font-medium text-zinc-950">Tulane University</dt>
								<dd class="text-zinc-700">B.S. in Mathematics, expected 2028</dd>
							</div>
						</dl>
					</section>

					<section class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
						<h2 class="text-2xl">Skills</h2>
						<div class="mt-4 flex flex-wrap gap-2 text-sm">
							<span class="pill">Python</span>
							<span class="pill">R</span>
							<span class="pill">SQL</span>
							<span class="pill">Java</span>
							<span class="pill">Teaching</span>
							<span class="pill">Tutoring</span>
							<span class="pill">Google Analytics</span>
						</div>
					</section>

					<section class="lg:col-span-2 rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
						<h2 class="text-2xl">Work experience</h2>
						<div class="mt-5 space-y-4">
							<article class="rounded-xl border border-zinc-200 bg-zinc-50 p-5">
								<p class="text-sm font-semibold text-zinc-950">
									Math Instructor <span class="text-zinc-400">•</span> Mathnasium
								</p>
								<p class="mt-1 text-sm text-zinc-700">Aug 2023 – Aug 2024</p>
							</article>

							<article class="rounded-xl border border-zinc-200 bg-zinc-50 p-5">
								<p class="text-sm font-semibold text-zinc-950">
									Data Analyst <span class="text-zinc-400">•</span> OnDemand Painters
								</p>
								<p class="mt-1 text-sm text-zinc-700">Nov 2022 – Aug 2023</p>
							</article>

							<article class="rounded-xl border border-zinc-200 bg-zinc-50 p-5">
								<p class="text-sm font-semibold text-zinc-950">
									Owner <span class="text-zinc-400">•</span> Naig Landscaping
								</p>
								<p class="mt-1 text-sm text-zinc-700">Apr 2019 – Mar 2022</p>
								<p class="mt-3 text-sm text-zinc-800">Services: lawn care, landscaping, and handyman services.</p>
							</article>
						</div>
					</section>
				</section>
			</main>

			<aside class="space-y-6 lg:sticky lg:top-24">
				<section class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
					<p class="text-xs font-semibold uppercase tracking-wide text-zinc-600">Quick info</p>
					<dl class="mt-4 space-y-3 text-sm">
						<div class="grid gap-1">
							<dt class="text-zinc-600">Email</dt>
							<dd><a class="no-underline hover:underline" href={`mailto:${site.email}`}>{site.email}</a></dd>
						</div>
						<div class="grid gap-1">
							<dt class="text-zinc-600">Location</dt>
							<dd class="text-zinc-800">{site.location}</dd>
						</div>
						<div class="grid gap-1">
							<dt class="text-zinc-600">Affiliation</dt>
							<dd class="text-zinc-800">{site.affiliation}</dd>
						</div>
					</dl>

					<p class="mt-5 text-xs font-semibold uppercase tracking-wide text-zinc-600">Links</p>
					<ul class="mt-3 space-y-2 text-sm text-zinc-800">
						<li><a class="no-underline hover:underline" href="/ENCV.pdf">PDF</a></li>
						<li><a class="no-underline hover:underline" href={site.social.github} target="_blank" rel="noreferrer">GitHub</a></li>
						<li><a class="no-underline hover:underline" href={site.social.linkedin} target="_blank" rel="noreferrer">LinkedIn</a></li>
						<li><a class="no-underline hover:underline" href={site.social.youtube} target="_blank" rel="noreferrer">YouTube</a></li>
					</ul>
				</section>

				<section class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
					<p class="text-xs font-semibold uppercase tracking-wide text-zinc-600">Tip</p>
					<p class="mt-2 text-sm text-zinc-700">
						To update your CV, replace <code>public/ENCV.pdf</code> with a new export and keep the same filename.
					</p>
				</section>
			</aside>
		</div>
	</section>
</SiteLayout>
