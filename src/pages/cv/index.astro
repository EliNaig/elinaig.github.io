---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { site } from "../../lib/site";
---

<SiteLayout title="CV">
	<section class="container mt-10 sm:mt-14">
		<div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
			<div>
				<h1>CV</h1>
				<p class="mt-2 text-sm text-zinc-700">{site.affiliation}</p>
			</div>
			<div class="flex flex-wrap gap-2">
				<a
					class="inline-flex items-center justify-center rounded-md border border-zinc-300 bg-white px-3 py-2 text-sm font-medium text-zinc-900 no-underline hover:bg-zinc-50"
					href="/ENCV.pdf"
				>
					Download PDF
				</a>
				<a
					class="inline-flex items-center justify-center rounded-md border border-zinc-300 bg-white px-3 py-2 text-sm font-medium text-zinc-900 no-underline hover:bg-zinc-50"
					href={`mailto:${site.email}`}
				>
					Email
				</a>
			</div>
		</div>

		<hr class="mt-8" />

		<div class="mt-8 grid gap-10 lg:grid-cols-[1fr_1fr]">
			<section>
				<h2 class="text-xl">Education</h2>
				<dl class="mt-4 space-y-3 text-sm text-zinc-800">
					<div class="grid gap-1">
						<dt class="font-medium text-zinc-950">Tulane University</dt>
						<dd>B.S. in Mathematics, expected 2028</dd>
					</div>
				</dl>
			</section>

			<section>
				<h2 class="text-xl">Skills</h2>
				<ul class="mt-4 grid list-disc gap-2 pl-5 text-sm text-zinc-800">
					<li>Python, R, SQL, Java</li>
					<li>Teaching and tutoring</li>
					<li>Google Analytics</li>
				</ul>
			</section>

			<section class="lg:col-span-2">
				<h2 class="text-xl">Work experience</h2>
				<div class="mt-4 space-y-5">
					<div class="rounded-xl border border-zinc-200 bg-white p-5">
						<p class="text-sm font-medium text-zinc-950">Math Instructor <span class="text-zinc-400">•</span> Mathnasium</p>
						<p class="mt-1 text-sm text-zinc-700">Aug 2023 – Aug 2024</p>
					</div>

					<div class="rounded-xl border border-zinc-200 bg-white p-5">
						<p class="text-sm font-medium text-zinc-950">
							Data Analyst <span class="text-zinc-400">•</span> OnDemand Painters
						</p>
						<p class="mt-1 text-sm text-zinc-700">Nov 2022 – Aug 2023</p>
					</div>

					<div class="rounded-xl border border-zinc-200 bg-white p-5">
						<p class="text-sm font-medium text-zinc-950">
							Owner <span class="text-zinc-400">•</span> Naig Landscaping
						</p>
						<p class="mt-1 text-sm text-zinc-700">Apr 2019 – Mar 2022</p>
						<p class="mt-3 text-sm text-zinc-800">Services: lawn care, landscaping, and handyman services.</p>
					</div>
				</div>
			</section>
		</div>
	</section>
</SiteLayout>

