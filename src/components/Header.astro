---
import { site } from "../lib/site";

const pathname = Astro.url.pathname;

const nav = [
	{ href: "/", label: `${site.name}'s Homepage` },
	{ href: "/cv/", label: "CV" },
] as const;

function isActive(href: string) {
	if (href === "/") return pathname === "/";
	return pathname.startsWith(href);
}
---

<a
	href="#content"
	class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-white focus:px-3 focus:py-2 focus:text-sm focus:font-medium focus:text-zinc-900 focus:shadow"
>
	Skip to content
</a>

<header class="border-b border-zinc-200 bg-white">
	<div class="container flex items-center justify-between gap-6 py-4">
		<nav class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm" aria-label="Primary navigation">
			{nav.map((item) => (
				<a
					href={item.href}
					class:list={[
						"no-underline hover:underline",
						isActive(item.href) ? "font-semibold text-zinc-950" : "text-zinc-700",
					]}
				>
					{item.label}
				</a>
			))}
		</nav>
	</div>
</header>
