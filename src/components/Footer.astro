---
import { site } from "../lib/site";

const social = [
	{ label: "Email", href: `mailto:${site.email}` },
	{ label: "GitHub", href: site.social.github },
	{ label: "LinkedIn", href: site.social.linkedin },
	{ label: "YouTube", href: site.social.youtube },
] as const;

const pages = [
	{ label: "Home", href: "/" },
	{ label: "About", href: "/about/" },
	{ label: "Work", href: "/work/" },
	{ label: "CV", href: "/cv/" },
	{ label: "Contact", href: "/contact/" },
] as const;

const work = [
	{ label: "Projects", href: "/projects/" },
	{ label: "Publications", href: "/publications/" },
	{ label: "Talks", href: "/talks/" },
	{ label: "Teaching", href: "/teaching/" },
] as const;

const year = new Date().getFullYear();
---

<footer class="border-t border-zinc-200 bg-zinc-50">
	<div class="container py-12">
		<div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-4">
			<div class="lg:col-span-1">
				<p class="font-serif text-lg font-semibold text-zinc-950">{site.name}</p>
				<p class="mt-2 text-sm text-zinc-700">
					{site.affiliation} <span class="text-zinc-400">•</span> {site.location}
				</p>
				<p class="mt-4 text-sm text-zinc-700">
					<a class="no-underline hover:underline" href={`mailto:${site.email}`}>{site.email}</a>
				</p>
			</div>

			<div>
				<p class="text-xs font-semibold uppercase tracking-wide text-zinc-600">Pages</p>
				<ul class="mt-3 space-y-2 text-sm text-zinc-700">
					{pages.map((l) => (
						<li><a class="no-underline hover:underline" href={l.href}>{l.label}</a></li>
					))}
				</ul>
			</div>

			<div>
				<p class="text-xs font-semibold uppercase tracking-wide text-zinc-600">Work</p>
				<ul class="mt-3 space-y-2 text-sm text-zinc-700">
					{work.map((l) => (
						<li><a class="no-underline hover:underline" href={l.href}>{l.label}</a></li>
					))}
				</ul>
			</div>

			<div>
				<p class="text-xs font-semibold uppercase tracking-wide text-zinc-600">Connect</p>
				<ul class="mt-3 space-y-2 text-sm text-zinc-700">
					{social.map((l) => (
						<li>
							<a class="no-underline hover:underline" href={l.href} target={l.href.startsWith("mailto:") ? undefined : "_blank"} rel="noreferrer">
								{l.label}
							</a>
						</li>
					))}
				</ul>
			</div>
		</div>

		<div class="mt-10 flex flex-wrap items-center justify-between gap-4 border-t border-zinc-200 pt-6 text-sm text-zinc-600">
			<p>© {year} {site.name}</p>
			<p class="text-zinc-500">
				Built with Astro • Hosted on GitHub Pages
			</p>
		</div>
	</div>
</footer>
