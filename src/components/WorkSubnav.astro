---
const pathname = Astro.url.pathname;

const items = [
	{ href: "/work/", label: "Overview" },
	{ href: "/publications/", label: "Publications" },
	{ href: "/talks/", label: "Talks" },
	{ href: "/teaching/", label: "Teaching" },
] as const;

function isActive(href: string) {
	if (href === "/work/") return pathname === "/work/";
	return pathname.startsWith(href);
}
---

<nav class="mt-6" aria-label="Work section navigation">
	<ul class="flex flex-wrap gap-2 text-sm">
		{
			items.map((item) => (
				<li>
					<a
						href={item.href}
						class:list={[
							"inline-flex items-center rounded-full border px-3 py-1.5 no-underline",
							isActive(item.href)
								? "border-zinc-300 bg-white text-zinc-950"
								: "border-zinc-200 bg-zinc-50 text-zinc-700 hover:bg-white",
						]}
					>
						{item.label}
					</a>
				</li>
			))
		}
	</ul>
</nav>

